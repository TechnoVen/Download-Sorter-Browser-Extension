{
  "manifest_version": 3,
  "name": "Download Sorter",
  "description": "Automatically sort downloads by file type and subtype into organized folders.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "downloads.shelf",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "action": {
    "default_title": "Download Sorter"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
