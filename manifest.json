{
  "manifest_version": 3,
  "name": "Download Sorter",
  "version": "1.0.0",
  "description": "Automatically sort downloads into categorized folders by file type.",
  "action": {
    "default_title": "Download Sorter",
    "default_popup": "options/options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "store/icons/icon-16.png",
    "48": "store/icons/icon-48.png",
    "128": "store/icons/icon-128.png"
  },
  "options_page": "options/options.html"
}
